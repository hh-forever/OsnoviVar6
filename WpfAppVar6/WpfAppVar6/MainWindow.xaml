        <TextBlock x:Name="NumberMax" HorizontalAlignment="Left" Margin="308,372,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="63" FontSize="20"/>
        <Button Content="Найти" Background="Orange" HorizontalAlignment="Left" Margin="500,365,0,0" VerticalAlignment="Top" Width="85" Height="33" FontSize="20" Click="Button_Reschenie"/>

